    glow.Position = main.Position
    glow.Size = main.Size
end)

-- ======================
-- Honey System Tab
-- ======================

local honeyPage = createTab("Honey", "üçØ")

-- Hive Section
local hiveSection = Instance.new("Frame", honeyPage)
hiveSection.Size = UDim2.new(1,-24,0,120)
hiveSection.BackgroundTransparency = 1
local hiveLayout = Instance.new("UIListLayout", hiveSection)
hiveLayout.SortOrder = Enum.SortOrder.LayoutOrder
hiveLayout.Padding = UDim.new(0,8)

local loopExtract = false
local extractDelay = 5

local extractBtn = Instance.new("TextButton", hiveSection)
extractBtn.Size = UDim2.new(1,0,0,30)
extractBtn.BackgroundColor3 = Color3.fromRGB(0,170,255)
extractBtn.TextColor3 = Color3.new(1,1,1)
extractBtn.Font = Enum.Font.GothamBold
extractBtn.TextSize = 14
extractBtn.Text = "Start Extract"

extractBtn.MouseButton1Click:Connect(function()
    loopExtract = not loopExtract
    extractBtn.Text = loopExtract and "Stop Extract" or "Start Extract"
    if loopExtract then
        spawn(function()
            while loopExtract do
                local plot = workspace.Plots:GetChildren()[2]
                local hives = {}
                for i=1,30 do
                    local hive = plot:FindFirstChild("Hives"):FindFirstChild(tostring(i))
                    if hive then table.insert(hives,hive) end
                end
                pcall(function() HiveRemote:FireServer("ExtractHoney",hives) end)
                task.wait(extractDelay)
            end
        end)
    end
end)

