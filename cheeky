-- Minimize / Close
local btnClose = Instance.new("TextButton", topBar)
btnClose.Size = UDim2.new(0, 36, 0, 32)
btnClose.Position = UDim2.new(1, -46, 0, 8)
btnClose.Text = "‚úñ"
btnClose.Font = Enum.Font.GothamBold
