	if buying then
		task.spawn(function()
			local buyEvent = game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BuyItem")
			while buying do
				pcall(function() buyEvent:FireServer("RandomItem") end)
				task.wait(getBuyDelay())
			end
		end)
	end
end)

