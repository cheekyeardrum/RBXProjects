leftList.Position = UDim2.new(0,12,0,104)
leftList.BackgroundTransparency = 1
local leftLayout = Instance.new("UIListLayout", leftList)
leftLayout.SortOrder = Enum.SortOrder.LayoutOrder
leftLayout.Padding = UDim.new(0,10)

-- Content area
local contentArea = Instance.new("Frame", main)
contentArea.Size = UDim2.new(1,-200,1,-60)
contentArea.Position = UDim2.new(0,180,0,56)
contentArea.BackgroundColor3 = Color3.fromRGB(8,8,9)
round(contentArea,10)

-- Tabs
local tabs = {}
local activeTab = nil
local function createTab(name, emoji)
    local btn = Instance.new("TextButton", leftList)
    btn.Size = UDim2.new(1,0,0,44)
    btn.BackgroundColor3 = Color3.fromRGB(24,24,26)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.AutoButtonColor = false
    btn.Text = (" %s   %s"):format(emoji or "‚Ä¢", name)
    round(btn,8)

    local page = Instance.new("Frame", contentArea)
    page.Size = UDim2.new(1,-24,1,0)
    page.BackgroundTransparency = 1
    page.Visible = false

    tabs[name] = {Button = btn, Page = page}
    btn.MouseButton1Click:Connect(function()
        for n,t in pairs(tabs) do
            t.Page.Visible = false
            tween(t.Button, {BackgroundColor3 = Color3.fromRGB(24,24,26)}, TRANS)
        end
        page.Visible = true
        activeTab = name
        tween(btn, {BackgroundColor3 = THEME_BG}, TRANS)
    end)
    return page
end

-- Main tabs
local playerPage = createTab("Player", "üßç")
local autoPage = createTab("Auto", "‚öôÔ∏è")
local tpPage = createTab("Teleports", "üìç")
local visualsPage = createTab("Visuals", "üé®")
local serverPage = createTab("Server", "üåê")




-- ======================
-- Honey System Tab
-- ======================

local honeyPage = createTab("Honey", "üçØ")

-- Layout for Honey tab
local honeyLayout = Instance.new("UIListLayout", honeyPage)
honeyLayout.SortOrder = Enum.SortOrder.LayoutOrder
honeyLayout.Padding = UDim.new(0, 12)

-- ===== Hive Section (Extract Honey) =====
local hiveSection = Instance.new("Frame", honeyPage)
hiveSection.Size = UDim2.new(1, -24, 0, 50)
hiveSection.BackgroundTransparency = 1

local extractBtn = Instance.new("TextButton", hiveSection)
extractBtn.Size = UDim2.new(1, 0, 1, 0)
extractBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
extractBtn.TextColor3 = Color3.new(1, 1, 1)
extractBtn.Font = Enum.Font.GothamBold
extractBtn.TextSize = 14
extractBtn.Text = "Start Extract"

local loopExtract = false
local extractDelay = 5

extractBtn.MouseButton1Click:Connect(function()
    loopExtract = not loopExtract
    extractBtn.Text = loopExtract and "Stop Extract" or "Start Extract"

    if loopExtract then
        spawn(function()
            while loopExtract do
                local HiveRemote = game:GetService("ReplicatedStorage")
                    :WaitForChild("Framework"):WaitForChild("Features")
                    :WaitForChild("HoneySystem"):WaitForChild("HiveUtil")
                    :WaitForChild("RemoteEvent")

                local plot = workspace.Plots:GetChildren()[2] -- replace with correct plot index
                if plot and plot:FindFirstChild("Hives") then
                    local hives = {}
                    for i = 1, 30 do
                        local hive = plot.Hives:FindFirstChild(tostring(i))
                        if hive then table.insert(hives, hive) end
                    end
                    pcall(function()
                        HiveRemote:FireServer("ExtractHoney", hives)
                    end)
                end
                task.wait(extractDelay)
            end
        end)
    end
end)

-- ===== Flower Section (Buy All Flowers) =====
local flowerSection = Instance.new("Frame", honeyPage)
flowerSection.Size = UDim2.new(1, -24, 0, 50)
flowerSection.BackgroundTransparency = 1

local flowerBtn = Instance.new("TextButton", flowerSection)
flowerBtn.Size = UDim2.new(1, 0, 1, 0)
flowerBtn.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
flowerBtn.TextColor3 = Color3.new(1, 1, 1)
flowerBtn.Font = Enum.Font.GothamBold
flowerBtn.TextSize = 14
flowerBtn.Text = "Buy All Flowers"

flowerBtn.MouseButton1Click:Connect(function()
    local FlowerRemote = game:GetService("ReplicatedStorage")
        :WaitForChild("Framework"):WaitForChild("Features")
        :WaitForChild("HoneySystem"):WaitForChild("FlowerUtil")
        :WaitForChild("RemoteEvent")

    local flowerList = {
        "AquilegiaCoerulea", "Bamboo", "Bluebell", "Cactus", "Clover",
        "Dahlia", "Daisy", "FireBlossom", "KniphofiaUvaria", "Lavender",
        "Lily", "MorningGlory", "RedRose", "Sunflower", "Tulip",
        "VenusFlyTrap",
    }

    for _, flowerName in ipairs(flowerList) do
        local args = {"BuyFlower", flowerName}
        pcall(function()
            FlowerRemote:FireServer(unpack(args))
        end)
        task.wait(0.1)
    end
end)

-- ===== Sell Section =====
local sellSection = Instance.new("Frame", honeyPage)
sellSection.Size = UDim2.new(1, -24, 0, 50)
sellSection.BackgroundTransparency = 1

local sellBtn = Instance.new("TextButton", sellSection)
sellBtn.Size = UDim2.new(1, 0, 1, 0)
sellBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 127)
sellBtn.TextColor3 = Color3.new(1, 1, 1)
sellBtn.Font = Enum.Font.GothamBold
sellBtn.TextSize = 14
sellBtn.Text = "Start Sell"

local loopSell = false
local sellDelay = 5

sellBtn.MouseButton1Click:Connect(function()
    loopSell = not loopSell
    sellBtn.Text = loopSell and "Stop Sell" or "Start Sell"

    if loopSell then
        spawn(function()
            while loopSell do
                local HoneyRemote = game:GetService("ReplicatedStorage")
                    :WaitForChild("Framework"):WaitForChild("Features")
                    :WaitForChild("HoneySystem"):WaitForChild("HoneyUtil")
                    :WaitForChild("RemoteEvent")
                pcall(function()
                    HoneyRemote:FireServer("SellHoney", "Honey")
                end)
                task.wait(sellDelay)
            end
        end)
    end
end)

print("Cheeky Hub V1.0 - Honey Tab loaded successfully.")
