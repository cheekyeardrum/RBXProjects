-- ===== Auto Sell Section =====
-----------------------------------------------------------------
local sellBtn, getSellDelay = createButtonWithSlider(honeyPage, "Auto Sell", Color3.fromRGB(255, 150, 0), 1, 20, 5)
local selling = false

sellBtn.MouseButton1Click:Connect(function()
	selling = not selling
	sellBtn.Text = selling and "Stop Selling" or "Auto Sell"
	if selling then
		task.spawn(function()
			local sellEvent = game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("SellHoney")
			while selling do
				pcall(function() sellEvent:FireServer() end)
				task.wait(getSellDelay())
			end
		end)
	end
end)

