local rawUrl = "https://raw.githubusercontent.com/cheekyeardrum/RBXProjects/main/NewUiStellar.lua
"

local function fetch(url)
    if syn and syn.request then
        return syn.request({Url = url, Method = "GET"}).Body
    elseif http and http.request then
        return http.request({Url = url, Method = "GET"}).Body
    else
        return game:HttpGet(url)
    end
end

local ok, CheekyLibrary = pcall(function()
    local body = fetch(rawUrl)
    assert(body and #body > 0, "empty response from HTTP GET")
    local fn = assert(loadstring(body), "loadstring failed (syntax or HTML returned)")
    return fn()
end)

if not ok then
    warn("Failed to load Cheeky UI library:", CheekyLibrary)
    return
end

-- Optional: run loading animation if it exists
if CheekyLibrary.LoadAnimation and CheekyLibrary:LoadAnimation() then
    CheekyLibrary:StartLoad()
    CheekyLibrary:Loaded()
end

local UserInputService = game:GetService("UserInputService")

local Window = CheekyLibrary:Window({
    SubTitle = "Cheeky Hub",
    Size = UserInputService.TouchEnabled and UDim2.new(0, 380, 0, 260) or UDim2.new(0, 500, 0, 320),
    TabWidth = 140
})

