-- Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TweenService = game:GetService("TweenService")
local Player = Players.LocalPlayer

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FullRemoteGUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 400, 0, 600)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -300)
MainFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Padding = UDim.new(0,5)
UIListLayout.Parent = MainFrame

-- Scroll Frame
local ScrollFrame = Instance.new("ScrollingFrame")
ScrollFrame.Size = UDim2.new(1,0,1,-10)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.BorderSizePixel = 0
ScrollFrame.CanvasSize = UDim2.new(0,0,0,0)
ScrollFrame.ScrollBarThickness = 10
ScrollFrame.Parent = MainFrame

local ScrollLayout = Instance.new("UIListLayout")
ScrollLayout.SortOrder = Enum.SortOrder.LayoutOrder
ScrollLayout.Padding = UDim.new(0,5)
ScrollLayout.Parent = ScrollFrame

ScrollLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    ScrollFrame.CanvasSize = UDim2.new(0,0,0,ScrollLayout.AbsoluteContentSize.Y)
end)

-- Helper functions
local function CreateTextBox(placeholder)
    local box = Instance.new("TextBox")
    box.Size = UDim2.new(1,-10,0,30)
    box.PlaceholderText = placeholder
    box.BackgroundColor3 = Color3.fromRGB(50,50,50)
    box.TextColor3 = Color3.fromRGB(255,255,255)
    box.BorderSizePixel = 0
    box.ClearTextOnFocus = false
    box.Parent = ScrollFrame
    return box
end

local function CreateButton(name, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1,-10,0,30)
    btn.Text = name
    btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.BorderSizePixel = 0
    btn.Parent = ScrollFrame
    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- Egg and Pet inputs
local EggNameBox = CreateTextBox("Egg Name")
local PetDeleteBox = CreateTextBox("Pet Name to Delete")

-- Add buttons for some key remotes
local Remotes = {
    "Eggs","GetGenerationData","GetMetadata","GetPetCount","GetPickaxe",
    "GetWorld","WaitForData","Wheel","Boosts","Coins","Daily","DataSync",
    "Friends","GameHandler","GameLoaded","ItemDrop","Metamethod",
    "Notification","Pets","Playtime","ShopRemote","Sound","SystemChat",
    "UpdateFriend","UpdateInterfaceType"
}

for _, remoteName in ipairs(Remotes) do
    local remote = ReplicatedStorage:WaitForChild("Remotes"):WaitForChild(remoteName)
    CreateButton(remoteName, function()
        print("Firing remote:", remoteName)
        -- Example fire
        pcall(function()
            remote:FireServer()
        end)
    end)
end

-- Auto Delete Pet Button
CreateButton("Auto Delete Pet", function()
    local petName = PetDeleteBox.Text
    for _, v in pairs(Player.Backpack:GetChildren()) do
        if v:IsA("Tool") and v:FindFirstChild("PetName") and v.PetName.Value == petName then
            local args = {
                {Info="DeletePet", PetId=v.Name}
            }
            ReplicatedStorage.Remotes.Pets:FireServer(unpack(args))
        end
    end
end)

-- Open/close GUI with toggle
local guiOpen = true
CreateButton("Toggle GUI", function()
    guiOpen = not guiOpen
    MainFrame.Visible = guiOpen
end)
